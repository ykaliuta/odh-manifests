apiVersion: rbac.authorization.k8s.io/v1
kind: Role
metadata:
  name: ds-pipeline-viewer-controller-role-{{.Name}}
  namespace: {{.Namespace}}
rules:
- apiGroups:
  - '*'
  resources:
  - deployments
  - services
  verbs:
  - create
  - get
  - list
  - watch
  - update
  - patch
  - delete
- apiGroups:
  - kubeflow.org
  resources:
  - viewers
  - viewers/finalizers
  verbs:
  - create
  - get
  - list
  - watch
  - update
  - patch
  - delete
